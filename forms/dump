  <!-- Inline "main" script — initializes progress bars, swiper, AOS, etc. -->
  <script>
    // Wait for DOM
    document.addEventListener('DOMContentLoaded', function () {
      // AOS
      if (window.AOS) AOS.init({ duration: 600, once: true });

      // PureCounter (if present)
      try { if (window.PureCounter) new PureCounter(); } catch(e){}

      // Progress bars animation — animate when skills section enters viewport
      (function initProgressBars() {
        const skillsSection = document.getElementById('skills');
        const bars = skillsSection ? skillsSection.querySelectorAll('.progress-bar') : [];
        if (!bars.length) return;

        // Use Waypoint if present
        if (typeof Waypoint !== 'undefined') {
          new Waypoint({
            element: skillsSection,
            handler: function () {
              bars.forEach(bar => {
                const value = bar.getAttribute('aria-valuenow') || 0;
                bar.style.width = value + '%';
                bar.style.transition = 'width 1.2s ease-in-out';
              });
              this.destroy();
            },
            offset: '80%'
          });
        } else {
          // Fallback: animate immediately
          bars.forEach(bar => {
            const value = bar.getAttribute('aria-valuenow') || 0;
            bar.style.width = value + '%';
          });
        }
      })();

      // Initialize all Swipers that use the .init-swiper wrapper + JSON config
      document.querySelectorAll('.init-swiper').forEach(function (el) {
        try {
          const configScript = el.querySelector('.swiper-config');
          let config = {};
          if (configScript) {
            config = JSON.parse(configScript.textContent.trim());
          }
          // Provide sensible defaults
          config = Object.assign({
            loop: false,
            speed: 600,
            slidesPerView: 1,
            spaceBetween: 10,
          }, config);

          // instantiate Swiper
          const swiper = new Swiper(el, config);

        } catch (err) {
          // silent fail — but don't break the rest
          console.warn('Swiper init failed:', err);
        }
      });

      // GLightbox init (if any)
      try {
        if (window.GLightbox) GLightbox({ selector: '.glightbox' });
      } catch (e) {}

      // imagesLoaded + Isotope (optional; safe to init even if no grid)
      try {
        const grid = document.querySelector('.portfolio-container');
        if (grid && window.imagesLoaded && window.Isotope) {
          imagesLoaded(grid, function () {
            new Isotope(grid, { itemSelector: '.portfolio-item', layoutMode: 'masonry' });
          });
        }
      } catch (e) { /* ignore */ }

      // Mobile nav toggle
      (function mobileNav() {
        const nav = document.getElementById('navmenu');
        const toggle = nav ? nav.querySelector('.mobile-nav-toggle') : null;
        if (!toggle) return;
        toggle.addEventListener('click', function () {
          nav.classList.toggle('navmenu-active');
          toggle.classList.toggle('bi-list');
          toggle.classList.toggle('bi-x');
        });
      })();

      // Scroll top button
      (function scrollTop() {
        const btn = document.getElementById('scroll-top');
        window.addEventListener('scroll', function () {
          if (window.scrollY > 300) btn.classList.add('show');
          else btn.classList.remove('show');
        });
        btn.addEventListener('click', function (e) {
          e.preventDefault();
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      })();

      // Hide preloader after load (or after small delay)
      window.addEventListener('load', function () {
        const pre = document.getElementById('preloader');
        if (!pre) return;
        setTimeout(() => {
          pre.style.transition = 'opacity .4s ease';
          pre.style.opacity = '0';
          setTimeout(() => pre.remove(), 500);
        }, 500);
      });

    }); // DOMContentLoaded
  </script>
